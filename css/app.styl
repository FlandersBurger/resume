body {
  padding-bottom:70px;
}

.social-media span {
  display:inline-block;
  width:0px;
  opacity: 0;
  padding-left:5px;
}


.social-media:hover span {
  opacity: 1;
  width:60px;
  transition: width 0.4s, opacity 0.5s ease-out;
}

.tab-image {
  max-width:50px !important;
  margin-right:5px;
}
