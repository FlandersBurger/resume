[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

@media (max-width: 768px) {
  #footer {
    display: none;
  }
}

@media print {
  @page {
    margin: 16mm 12mm;
  }

  thead, tfoot {
    display: none !important;
  }

  header, footer {
    display: none;
  }

  .print {
    display: block !important;
    -webkit-print-color-adjust: exact;
  }

  .display {
    display: none !important;
  }
}

.print {
  display: none;
}

body {
  min-width: 300px;
}

.navbar {
  z-index: 100000;
}

.container {
  width: 100%;
}

.container .page {
  padding-top: 50px;
}

.loading {
  position: fixed;
  left: 50%;
  top: 50%;
}


.social-media {
  display: inline-flex !important;
  align-items: center;
}

.social-media span {
  width: 0px;
  opacity: 0;
  padding-left: 10px;
}

.social-media:hover span {
  opacity: 1;
  width: 90px;
  transition: width 0.4s, opacity 0.5s ease-out;
}

.tab-image {
  max-width: 50px !important;
  margin-right: 5px;
}

.hover-div {
  position: fixed;
  display: none;
  padding: 5px;
  max-width: 500px;
  border-radius: 5px;
  z-index: 10000;
}

hr {
  clear: both;
}

.modal {
  top: 50px;
}

.img-profile-a {
  padding: 5px !important;
}

.img-profile {
  max-height: 40px;
}

#loading-icon {
  display: none;
}

.navbar-default .navbar-toggle {
  border-color: #FFF;
  color: #FFF;
}

.checkbox-menu li label {
  display: block;
  padding: 3px 10px;
  clear: both;
  font-weight: normal;
  line-height: 1.42857143;
  color: #333;
  white-space: nowrap;
  margin: 0;
  transition: background-color 0.4s ease;
}

.checkbox-menu li input {
  margin: 0px 5px;
  top: 2px;
  position: relative;
  accent-color: #000;
}

.checkbox-menu li.active label {
  background-color: #cbcbff;
  font-weight: bold;
}

.checkbox-menu li label:hover, .checkbox-menu li label:focus {
  background-color: #f5f5f5;
}

.checkbox-menu li.active label:hover, .checkbox-menu li.active label:focus {
  background-color: #b8b8ff;
}