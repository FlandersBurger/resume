
@media (max-width:768px) {
  #hobbies-page #hobby-selector-container{
    position: relative;
  }
}

#hobbies-page #hobby-selector-container {
  position: fixed;
  padding-right:30px;
  padding-left:0px !important;
  padding-top:20px;
  width:100%;
  min-wdth:300px;
  text-align:center;
}

#hobbies-page #hobby-selector {
  position:relative;
  align-items: stretch;
  height:100%;
  background-color:rgba(200,200,200,0.8);
  border-radius: 6px;
  padding-top: 10px;
  padding-bottom: 20px;
  margin-top:20px;
}

#hobbies-page .ng-hide-remove {
  -webkit-animation:1s bounceInDown ease;
  animation:1s bounceInDown ease;
}

#hobbies-page .ng-hide-add {
  -webkit-animation:0.5s fadeOutDown ease;
  animation:0.5s fadeOutDown ease;
}

#hobbies-page #hobby-toggler {
  position:relative;
  width:100px;
  margin: 0 48%;
  background-color:rgba(50,50,50,0.8);
  color:rgba(240,240,240,0.8);
  border-radius: 50px;
}

#hobbies-page .hobby-current {
  color:black;
}

#hobbies-page .hobby-current h4 {
  font-weight:bold;
}

#hobbies-page .hobby-panel {
  display: flex;
  justify-content: center;
}

#hobbies-page .hobby {
  align-self: center;
}

#hobbies-page #hobby-text {
  margin-left: 12.5%;
  width: 75%;
}

#hobbies-page #hobby-text p {
  text-align:center;
  padding: 35px;
  font-family: 'Merriweather', serif;
  font-size:1.4em;
  color-black;
}

#hobbies-page .hobby:hover {
  transform: scale(1.2);
}

#images {
  position:absolute;
  /* Prevent vertical gaps */
  margin-left:-20px;
  line-height: 0;

  -webkit-column-count: 5;
  -webkit-column-gap:   0px;
  -moz-column-count:    5;
  -moz-column-gap:      0px;
  column-count:         5;
  column-gap:           0px;
}

#images img {
  /* Just in case there are inline attributes */
  width: 100% !important;
  height: auto !important;
  opacity:0.7;
}

#images img:hover {
  opacity:1;
}

@media (max-width: 1200px) {
  #images {
  -moz-column-count:    4;
  -webkit-column-count: 4;
  column-count:         4;
  }
}
@media (max-width: 1000px) {
  #images {
  -moz-column-count:    3;
  -webkit-column-count: 3;
  column-count:         3;
  }
}
@media (max-width: 800px) {
  #images {
  -moz-column-count:    2;
  -webkit-column-count: 2;
  column-count:         2;
  }
}
@media (max-width: 400px) {
  #images {
  -moz-column-count:    1;
  -webkit-column-count: 1;
  column-count:         1;
  }
}
