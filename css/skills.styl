#skills-page {
  text-align: center;
  width: 100%;
  margin-top: 15px;
}

#skills-page .skill-selector {
  -webkit-column-gap: 0px;
  -moz-column-gap: 0px;
  column-gap: 0px;
  margin-left: -20px;
  line-height: 0;
  margin-bottom: 100px;
}

#skills-page .selected-skill {
  margin: 0 auto;
  text-align: center;
  max-width: 150px;
  max-height: 150px;
}

#skills-page .selected-skill img {
  max-width: 150px;
}

#skills-page .selectable-skill img {
  max-height: 90px;
  max-width: 70px;
  padding: 4px;
  width: 100%;
}

#skills-page .selectable-skill {
  width: 100%;
}

#skills-page .selectable-skill:hover {
  background-color: #ddd;
}

#skills-page .selectable-skill:hover, .selected-skill img:hover {
  // transform:scale(1.1);
}

#skills-page .selectable-skill.ng-hide-remove {
  -webkit-animation: 1s zoomInDown ease;
  animation: 1s zoomInDown ease;
}

#skills-page .selectable-skill.ng-hide-add {
  -webkit-animation: 0.5s zoomOutUp ease;
  animation: 0.5s zoomOutUp ease;
}

#skills-page .skill-display.ng-hide-add {
  -webkit-animation: 0.5s fadeOut ease;
  animation: 0.5s fadeOut ease;
}

#skills-page .skill-display.ng-hide-remove {
  -webkit-animation: 1.5s fadeInUp ease;
  animation: 1.5s fadeInUp ease;
}

@media (min-width: 1001px) {
  #skills-page .skill-selector {
    -moz-column-count: 3;
    -webkit-column-count: 3;
    column-count: 3;
  }
}

@media (max-width: 1000px) {
  #skills-page .skill-selector {
    -moz-column-count: 2;
    -webkit-column-count: 2;
    column-count: 2;
  }
}

@media (max-width: 600px) {
  #skills-page .skill-selector {
    -moz-column-count: 1;
    -webkit-column-count: 1;
    column-count: 1;
  }
}
